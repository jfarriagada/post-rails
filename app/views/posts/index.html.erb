<h1>Listing posts</h1>

<ul class="thumbnails" id="posts">
    <% @posts.each do |post| %>
      <div id="post">
      <div class="col-sm-4 col-md-4">   
          <li class="span3"> 
            <div class="thumbnail tile-orange">
             <div class="caption">
              <h3><%= link_to post.title, post %></h3>
            </div>              
              <% if post.has_photo? %>
                <%= image_tag post.photo_path %>
              <% end %>
            </div>
          </li>
      </div>    
      </div>
    <% end %>
</ul>

